<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            app:cardBackgroundColor="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="180dp"
                    android:layout_height="240dp">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/imagebanner"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="34dp"
                    android:orientation="vertical">

                    <!--                Main header-->
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/my_workplace"
                        android:textColor="#161616"
                        android:textSize="18sp" />

                    <!--                    main content-->
                    <TextView
                        android:id="@+id/plot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/workplace_design_refers_to_the_process_of_designing_amp_organizing_your_workplace_to"
                        android:textColor="#4f4f4f"
                        android:textSize="13sp" />

                    <!--                    author-->
                    <TextView
                        android:id="@+id/director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/steve_smith"
                        android:textColor="#2b2b2b"
                        android:textSize="14sp" />

                    <!--                    published at-->
                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="9sp"
                        android:text="rating"
                        android:textColor="#4f4f4f"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="9sp"
                        android:text="genre"
                        android:textColor="#4f4f4f"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
<!--    </LinearLayout>-->
</RelativeLayout>